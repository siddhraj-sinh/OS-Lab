<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OSLab" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/keppel</item>
        <item name="colorPrimaryVariant">@color/keppel_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="fontFamily">@font/montserrat</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_backgorund</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="about_activity_toolbar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--text color of title-->
        <item name="android:textColorPrimary">@color/white</item>
        <!--font type of title and overflow menu-->
        <item name="fontFamily">@font/montserrat</item>
        <!--text color of overflow menu-->
        <item name="actionMenuTextColor">@color/black</item>
        <!--color of three dot of overflow menu-->
        <item name="android:textColorSecondary">@color/white</item>
        <!--color of overflow menus background-->
        <item name="popupMenuBackground">@color/white</item>
    </style>
    <style name="Theme_Dialog" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
</resources>